<launch>
  <!-- Arguments -->
  <arg name="serial_port" default="/dev/rplidar"/>
  <arg name="frame_id"    default="plate_middle_link"/>
  <arg name="motor_pwm"   default="500"/>

  <!-- Laser Sensor -->
  <node pkg="rplidar_ros" type="rplidarNode" name="rplidar" respawn="true" machine="robot">
    <param name="serial_port"         type="string" value="$(arg serial_port)"/>
    <param name="serial_baudrate"     type="int"    value="115200"/>
    <param name="frame_id"            type="string" value="laser"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <param name="motor_pwm"           type="int"    value="$(arg motor_pwm)"/>

    <remap from="scan" to="sensors/scan"/>
  </node>

  <!-- Laser filter, to remove scan points within the robot's footprint -->
  <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter" machine="robot">
    <rosparam command="load" file="$(find robot_bringup)/params/mobile_base/sensors/rplidar_filter.yaml" />

    <remap from="scan"          to="sensors/scan"/>
    <remap from="scan_filtered" to="sensors/scan_filtered"/>
    </node>
</launch>