<launch>
  <arg name="robot_name" default="robot"/>

  <arg name="serial_port" default="/dev/rplidar"/>
  <arg name="frame_id"    default="laser"/>
  <arg name="motor_pwm"   default="500"/>

  <node pkg="rplidar_ros" type="rplidarNode" name="rplidar" respawn="true" machine="$(arg robot_name)">
    <param name="serial_port"         type="string" value="$(arg serial_port)"/>
    <param name="serial_baudrate"     type="int"    value="115200"/>
    <param name="frame_id"            type="string" value="$(arg frame_id)"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <param name="motor_pwm"           type="int"    value="$(arg motor_pwm)"/>

    <remap from="scan" to="scan_raw"/>
  </node>

  <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter" machine="$(arg robot_name)">
    <rosparam command="load" file="$(find robot_bringup)/param/rplidar.yaml" />

    <remap from="scan"          to="scan_raw"/>
    <remap from="scan_filtered" to="scan"/>
  </node>

  <node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf" machine="$(arg robot_name)">
    <param name="output_frame"         type="str"    value="odom"/>
    <param name="base_footprint_frame" type="str"    value="base_footprint"/>
    <param name="freq"                 type="double" value="30.0"/>
    <param name="sensor_timeout"       type="double" value="1.0"/>
    <param name="odom_used"            type="bool"   value="true"/>
    <param name="imu_used"             type="bool"   value="true"/>
    <param name="vo_used"              type="bool"   value="false"/>
    <param name="debug"                type="bool"   value="false"/>
    <param name="self_diagnose"        type="bool"   value="false"/>

    <remap from="odom"                         to="/robot/odom"/>
    <remap from="imu/data"                     to="imu_data_raw"/>
    <remap from="robot_pose_ekf/odom_combined" to="/robot/odom_combined"/>
  </node>
</launch>