<launch>
  <arg name="robot_name" default="robot"/>

  <!-- <include file="$(find robot_navigation)/launch/includes/velocity_smoother.launch">
    <arg name="robot_name" value="$(arg robot_name)"/>
  </include> -->

  <!-- <include file="$(find robot_navigation)/launch/includes/amcl/r200.launch">
    <arg name="robot_name" value="$(arg robot_name)"/>
  </include> -->

  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_footprint"/>
  <arg name="global_frame_id" default="map"/>
  <arg name="odom_topic"      default="robot/odom" />
  <arg name="laser_topic"     default="robot/sensors/scan_filtered" />

  <node name="move_base" pkg="move_base" type="move_base" respawn="true" output="screen" machine="$(arg robot_name)">
    <rosparam file="$(find robot_navigation)/param/costmap_common_params.yaml"       command="load" ns="global_costmap" />
    <rosparam file="$(find robot_navigation)/param/costmap_common_params.yaml"       command="load" ns="local_costmap" />   
    <rosparam file="$(find robot_navigation)/param/local_costmap_params.yaml"        command="load" />   
    <rosparam file="$(find robot_navigation)/param/global_costmap_params.yaml"       command="load" />
    <rosparam file="$(find robot_navigation)/param/dwa_local_planner_params.yaml"    command="load" />
    <rosparam file="$(find robot_navigation)/param/move_base_params.yaml"            command="load" />
    <rosparam file="$(find robot_navigation)/param/global_planner_params.yaml"       command="load" />
    <rosparam file="$(find robot_navigation)/param/navfn_global_planner_params.yaml" command="load" />
    
    <!-- reset frame_id parameters using user input data -->
    <param name="global_costmap/global_frame"     value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame"      value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame"  value="$(arg base_frame_id)"/>
    <param name="DWAPlannerROS/global_frame_id"   value="$(arg odom_frame_id)"/>

    <remap from="cmd_vel" to="cmd_vel_mux/input/navigation"/>
    <remap from="odom"    to="$(arg odom_topic)"/>
    <remap from="scan"    to="$(arg laser_topic)"/>
  </node>
</launch>